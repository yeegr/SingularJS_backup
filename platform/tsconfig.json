{
  "compilerOptions": {
    "outDir": "./dev/",
    "rootDirs": [
      "./src",
      "./node_modules",
      "../../common",
      "../../lib/src/dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "index.android.js",
    "index.ios.js",
    "node_modules",
    "__tests__",
    "build",
    "dev",
    "dist",
  ]
}