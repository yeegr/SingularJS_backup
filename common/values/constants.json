{
  "PROJECT_TITLE": "SingularJS",
  "JWT_SECRET": "jwt_secret_key",
  "DEFAULT_PAGE_COUNT": 20,
  "PUBLIC_CONSUMER_FIELDS": "-_id password handle gender avatar posts events comments likes dislikes saves shares followers followings points level viewCount",

  "USER_TYPES": [
    "CONSUMER",
    "SUPPLIER",
    "ADMIN"
  ],

  "USER_ROLES": {
    "CONSUMER": ["normal", "contributor", "organizer"],
    "SUPPLIER": ["staff", "editor", "supervisor", "manager"],
    "ADMIN": ["admin", "super"]
  },

  "ACTIONS": [
    "CREATE", "UPDATE", "DELETE",
    "LOGIN", "LOGOUT",
    "LIKE", "UNDO-LIKE", "DISLIKE", "UNDO-DISLIKE",
    "SAVE", "UNSAVE",
    "DOWNLOAD", "REMOVE",
    "SHARE",
    "FOLLOW", "UNFOLLOW", "SUBSCRIBE", "UNSUBSCRIBE",
    "SUBMIT", "RETRACT",
    "VERIFY", "APPROVE", "REJECT", "SUSPEND"
  ],

  "TARGETS": [
    "CONSUMER", "SUPPLIER", "ADMIN",
    "POST", "EVENT", "PRODUCTS"
  ],

  "STATUSES": {
    "POST": ["editing", "pending", "approved", "published", "suspended", "expired"],
    "EVENT": ["editing", "pending", "approved", "published", "suspended", "expired"]
  },

  "LIMITS": {
    "MIN_HANDLE_LENGTH": 2,
    "MAX_HANDLE_LENGTH": 20,
    "MIN_PASSWORD_LENGTH": 6,
    "MAX_PASSWORD_LENGTH": 16,
    "MIN_NAME_LENGTH": 0,
    "MAX_NAME_LENGTH": 50
  },

  "VALIDATORS": {
    "EMAIL": "^[A-Z0-9a-z._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,64}$",
    "PID": "^(\\d{17})+(\\d|X)$",
    "PID_LENGTH": 18,
    "LOCALE": "^[a-z]{2}(_[A-Z]{2})?$",
    "COUNTRY": "^[A-Z]{2}$",
    "CURRENCY": "\\d{0,10}.\\d{0,2}",
    "IP": "\\b(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\b"
  }
}